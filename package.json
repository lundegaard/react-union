    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.1",
    "babel-preset-react-union": "^0.15.0",
    "enzyme": "^3.11.0",
