{
  "name": "react-union-boilerplate-ssr-basic",
  "version": "0.15.1",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/lundegaard/react-union",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.3",
    "classnames": "^2.2.6",
    "prop-types": "^15.6.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-hot-loader": "^4.12.18",
    "react-union": "^0.15.1",
    "react-union-rendering-service": "^0.15.1",
    "react-universal-component": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.3",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^10.0.1",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-preset-react-union": "^0.15.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.3",
    "eslint": "^6.8.0",
    "eslint-config-react-union": "^0.15.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-react": "^7.17.0",
    "husky": "^3.0.8",
    "lint-staged": "^9.4.1",
    "prettier": "^1.16.3",
    "react-union-scripts": "^0.15.1"
  },
  "scripts": {
    "build": "react-union-scripts build --release",
    "start": "react-union-scripts start --app SampleApp",
    "start:server": "node build/SampleApp/server",
    "test": "react-union-scripts test",
    "lint": "yarn lint:eslint",
    "lint:eslint": "eslint --ext .js ./",
    "precommit": "lint-staged",
    "prepush": "yarn lint && yarn test --release"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "yarn lint --fix",
      "git add"
    ]
  }
}
