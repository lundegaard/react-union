{
  "name": "react-union-boilerplate-ssr-basic",
  "version": "0.12.1",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/lundegaard/react-union",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "classnames": "^2.2.6",
    "prop-types": "^15.6.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-hot-loader": "^4.8.4",
    "react-union": "^0.12.1",
    "react-union-rendering-service": "^0.12.1",
    "react-universal-component": "^4.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "babel-core": "^7.0.0-bridge",
    "babel-eslint": "^10.0.1",
    "babel-plugin-dynamic-import-node": "^2.2.0",
    "babel-preset-react-union": "^0.12.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.13.0",
    "enzyme-to-json": "^3.3.5",
    "eslint": "^5.16.0",
    "eslint-config-react-union": "^0.12.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-react": "^7.13.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0",
    "react-union-scripts": "^0.12.1"
  },
  "scripts": {
    "build": "react-union-scripts build --release",
    "start": "react-union-scripts start --app SampleApp",
    "start:server": "node build/SampleApp/server",
    "test": "react-union-scripts test",
    "lint": "yarn lint:eslint",
    "lint:eslint": "eslint --ext .js ./",
    "precommit": "lint-staged",
    "prepush": "yarn lint && yarn test --release"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "yarn lint --fix",
      "git add"
    ]
  }
}
