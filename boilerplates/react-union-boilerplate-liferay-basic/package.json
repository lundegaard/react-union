{
  "name": "react-union-boilerplate-liferay-basic",
  "version": "0.3.0",
  "private": true,
  "license": "MIT",
  "repository": "https://github.com/lundegaard/react-union",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "babel-polyfill": "6.23.0",
    "classnames": "2.2.5",
    "document-ready": "2.0.1",
    "prop-types": "15.6.0",
    "react": "16.4.1",
    "react-dom": "16.4.1",
    "react-hot-loader": "4.3.3",
    "react-union": "^0.5.0",
    "redbox-react": "1.6.0"
  },
  "devDependencies": {
    "babel-eslint": "8.0.1",
    "babel-preset-react": "6.23.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "eslint": "4.7.2",
    "eslint-config-react-union": "^0.4.0",
    "eslint-plugin-babel": "4.1.2",
    "eslint-plugin-import": "2.7.0",
    "eslint-plugin-react": "7.4.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.0",
    "mkdirp": "0.5.1",
    "prettier": "^1.13.5",
    "react-union-scripts": "^0.5.5",
    "rimraf": "2.6.2"
  },
  "scripts": {
    "build": "react-union-scripts build",
    "build:liferay": "react-union-scripts build --release --target liferay && node ./tools/amdLoaderScripts.js SampleApp",
    "start": "react-union-scripts start --app SampleApp",
    "start:proxy": "react-union-scripts start --app SampleApp --proxy --target liferay",
    "test": "react-union-scripts test",
    "lint": "yarn lint:eslint",
    "lint:eslint": "eslint --ext .js ./",
    "precommit": "lint-staged",
    "prepush": "yarn lint && yarn test --release"
  },
  "lint-staged": {
    "**/*.js": [
      "prettier --write",
      "yarn lint --fix",
      "git add"
    ]
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  }
}
